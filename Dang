local UI = {}

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MHub"
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

local Blur = Instance.new("BlurEffect")
Blur.Size = 0
Blur.Parent = game.Lighting
local minimized = false

local function blurOn()
    TweenService:Create(Blur, TweenInfo.new(0.4, Enum.EasingStyle.Sine), {Size = 10}):Play()
end
local function blurOff()
    TweenService:Create(Blur, TweenInfo.new(0.4, Enum.EasingStyle.Sine), {Size = 0}):Play()
end

local function ApplyBorder(obj)
    local stroke = Instance.new("UIStroke")
    stroke.Thickness = 2
    stroke.Color = Color3.fromRGB(21, 132, 173)
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    stroke.Parent = obj
end

local function ConvertToScale(uiObject)
    task.wait()

    if not uiObject.Parent then return end

    local parent = uiObject.Parent
    if not parent.AbsoluteSize then return end

    if uiObject.Size then
        local sX = uiObject.Size.X.Offset / parent.AbsoluteSize.X
        local sY = uiObject.Size.Y.Offset / parent.AbsoluteSize.Y
        uiObject.Size = UDim2.new(sX, 0, sY, 0)
    end

    if uiObject.Position then
        local pX = uiObject.Position.X.Offset / parent.AbsoluteSize.X
        local pY = uiObject.Position.Y.Offset / parent.AbsoluteSize.Y
        uiObject.Position = UDim2.new(pX, 0, pY, 0)
    end
end

