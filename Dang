function UI.UpdateTargetsList(list)
    if typeof(list) == "table" then
        TargetListLabel.Text = "Targets: " .. table.concat(list, ", ")
    else
        TargetListLabel.Text = "Targets: " .. tostring(list or "none")
    end
end

function UI.SetTarget(name)
    CurrentTargetLabel.Text = "Current Target: " .. tostring(name or "none")
end

local NotifyColors = {
    success = Color3.new(60, 200, 90),
    error = Color3.new(220, 80, 80),
    warn = Color3.new(240, 180, 70),
    info = Color3.new(80, 170, 240),
}

local PermanentNote = Instance.new("TextLabel")
PermanentNote.Parent = MainFrame
PermanentNote.Size = UDim2.new(0.471, -24, 0, 25)
PermanentNote.Position = UDim2.new(0, 39, 0, 165)
PermanentNote.TextColor3 = NotifyColors.info
PermanentNote.Font = Enum.Font.Fondamento, Enum.FontStyle.Italic
PermanentNote.TextScaled = true
PermanentNote.TextWrapped = true
PermanentNote.Text = "No News"
PermanentNote.BackgroundTransparency = 1
PermanentNote.TextTransparency = 0
ApplyBorder(PermanentNote)
ConvertToScale(PermanentNote)

local C = Instance.new("UICorner", PermanentNote)
C.CornerRadius = UDim.new(0, 10)

function UI.ShowNotification(text, nType)
    nType = nType or "info"

    if text == nil or text == "" then
        text = "No News"
    end

    PermanentNote.Text = text
    PermanentNote.TextColor3 = NotifyColors[nType]
end

local function createStatLabel(name, posY)
    local label = Instance.new("TextLabel")
    label.Name = name
    label.Parent = MainFrame
    label.Size = UDim2.new(0.331, 0, -0.01, 25)
    label.Position = UDim2.new(0,  278, 0, posY)
    label.BackgroundTransparency = 1
    label.BackgroundColor3 = Color3.fromRGB(51, 51, 51)
    label.TextColor3 = Color3.fromRGB(136, 204, 255)
    label.Font = Enum.Font.Fondamento, Enum.FontStyle.Italic
    label.TextScaled = true
    label.TextWrapped = true
    label.Text = name .. ": 0"
    ApplyBorder(label)
    ConvertToScale(label)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = label
    return label
end

local EarnedLabel = createStatLabel("Earned", 90)
local TotalLabel = createStatLabel("Total Earned", 121)
local BountyLabel = createStatLabel("Bounty/Honor", 151)

function UI.UpdateStats(Earned, TotalEarned, Bounty)
    EarnedLabel.Text = "Earned: " .. tostring(Earned)
    TotalLabel.Text = "Total Earned: " .. tostring(TotalEarned)
    BountyLabel.Text = "Bounty/Honor: " .. tostring(Bounty)
end

